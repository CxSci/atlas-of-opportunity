{
  "extends": ["react-app", "react-app/jest"],
  "rules": {
    //    "semi": ["error", "never"],
    //    "quotes": ["error", "prefer-single", "avoid-escape"],
    "jsx-quotes": ["error", "prefer-double"],
    "max-len": [
      "warn",
      {
        "code": 120,
        "tabWidth": 2
      }
    ],
    "no-tabs": "error"
  },
  "overrides": [
    {
      "files": ["**/*.stories.*"],
      "rules": {
        "import/no-anonymous-default-export": "off"
      }
    }
  ]
}
